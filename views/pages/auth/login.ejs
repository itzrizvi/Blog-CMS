<%- include('../../partials/header.ejs') %>

    <!--Page Title-->
    <section class="page-title centred extra-padding"
        style="background-image: url(assets/images/background/page-title.jpg);">
        <div class="auto-container">
            <div class="content-box clearfix">
                <h1>Login</h1>
                <ul class="bread-crumb clearfix">
                    <li><a href="index.html">Home</a></li>
                    <li>Login</li>
                </ul>
            </div>
        </div>
    </section>
    <!--End Page Title-->


    <!-- error-section -->
    <section class="error-section centred lower-padding">
        <div class="container">
            <div class="content-box">
                <h2>Login Here!</h2>
            </div>
            <form method="POST" action="/auth/login" id="login-form" class="default-form card card-body">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                        <input type="email" name="email" id="email" placeholder="Email address"
                            class="form-control <%= error.email ? 'is-invalid': '' %>"
                            value="<%= value.email ? value.email: '' %>">
                        <div class="invalid-feedback">
                            <%= error.email && error.email %>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                        <input type="password" name="password" id="password" placeholder="Password"
                            class="form-control <%= error.email ? 'is-invalid': '' %>"
                            value="<%= value.email ? value.email: '' %>">
                        <div class="invalid-feedback">
                            <%= error.email && error.email %>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                        <button class="theme-btn style-one" type="submit" name="submit-form">Login</button>
                    </div>
                    <% if(isLoggedIn) {%>
                        <div class=" col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                            <button class="theme-btn style-one" type="submit" name="submit-form">Logout</button>
                        </div>
                        <% } %>

                </div>
            </form>
            <h5 class="my-3">Don't Have an Account? <a href="/auth/signup">Sign Up Here</a> </h5>
        </div>
        </div>
    </section>
    <!-- error-section end -->

    <%- include('../../partials/footer.ejs') %>


        </body>

        </html>